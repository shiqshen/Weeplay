<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="capstone.weeplay">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserLoginActivity"/>
        <activity android:name=".GameActivity"/>
        <activity android:name=".GameViewActivity"/>
        <activity android:name=".MainGameActivity"/>>
        <activity android:name=".MeActivity"/>
        <activity android:name=".FriendsActivity"/>
        <activity android:name=".ChatActivity"/>
        <activity android:name=".RecommendationActivity"/>
        <activity android:name=".ViewProfileActivity"/>
        <activity android:name=".ProfileActivity"></activity>
    </application>

</manifest>