<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="capstone.weeplay.GameActivity">

    <Button
        android:id="@+id/game"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="GAME"
        app:layout_constraintBaseline_toBaselineOf="@+id/friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/friends"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="Friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat"
        app:layout_constraintRight_toLeftOf="@+id/chat"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/chat"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="CHAT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/me"
        app:layout_constraintRight_toLeftOf="@+id/me"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/me"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="ME"
        app:layout_constraintBaseline_toBaselineOf="@+id/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUBG"
        app:layout_constraintTop_toBottomOf="@+id/game1"
        app:layout_constraintEnd_toEndOf="@+id/game"
        app:layout_constraintRight_toRightOf="@+id/game" />

    <ImageButton
        android:id="@+id/game1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/game2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="@+id/game1"
        app:layout_constraintLeft_toRightOf="@+id/friends"
        app:layout_constraintStart_toEndOf="@+id/friends" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="DOTA"
        app:layout_constraintTop_toBottomOf="@+id/game2"
        app:layout_constraintEnd_toEndOf="@+id/game2"
        app:layout_constraintRight_toRightOf="@+id/game2" />

    <ImageButton
        android:id="@+id/game3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/game1"
        app:layout_constraintRight_toRightOf="@+id/game1" />

    <ImageButton
        android:id="@+id/game4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/game2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/game2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="League of Legends"
        app:layout_constraintLeft_toLeftOf="@+id/game3"
        app:layout_constraintStart_toStartOf="@+id/game3"
        app:layout_constraintTop_toBottomOf="@+id/game3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter-Strike"
        app:layout_constraintTop_toBottomOf="@+id/game4"
        app:layout_constraintEnd_toEndOf="@+id/game4"
        app:layout_constraintRight_toRightOf="@+id/game4" />


</android.support.constraint.ConstraintLayout>