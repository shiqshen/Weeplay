<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="capstone.weeplay.MeActivity">

    <EditText
        android:id="@+id/textname"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textage" />

    <TextView
        android:id="@+id/name"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:text="Name"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/age" />

    <TextView
        android:id="@+id/age"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:text="Age"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="168dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textname"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/textage"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textgame1" />

    <TextView
        android:id="@+id/game1"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_marginBottom="11dp"
        android:text="Game 1"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="208dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/game2" />

    <TextView
        android:id="@+id/game2"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:text="Game 2"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="248dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/game3" />

    <TextView
        android:id="@+id/game3"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:text="Game 3"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="288dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textgame3"
        app:layout_constraintBottom_toBottomOf="@+id/textgame3"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/textgame1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textgame2" />

    <EditText
        android:id="@+id/textgame2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="248dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textgame3" />

    <EditText
        android:id="@+id/textgame3"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="288dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="107dp"
        android:layout_height="78dp"
        app:srcCompat="@android:drawable/toast_frame"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edit"
        app:layout_constraintEnd_toStartOf="@+id/edit" />

    <Button
        android:id="@+id/logout"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="108dp"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/edit"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Edit"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="355dp"
        app:layout_constraintTop_toTopOf="@+id/logout"
        app:layout_constraintBottom_toBottomOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/game"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="GAME"
        app:layout_constraintBaseline_toBaselineOf="@+id/friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/friends"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="Friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat"
        app:layout_constraintRight_toLeftOf="@+id/chat"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/chat"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="CHAT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/me"
        app:layout_constraintRight_toLeftOf="@+id/me"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/me"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="ME"
        app:layout_constraintBaseline_toBaselineOf="@+id/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>