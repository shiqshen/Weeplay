<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recommendation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="capstone.weeplay.RecommendationActivity">

    <Button
        android:id="@+id/game"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="GAME"
        app:layout_constraintBaseline_toBaselineOf="@+id/friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/friends"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="Friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat"
        app:layout_constraintRight_toLeftOf="@+id/chat"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/chat"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="CHAT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/me"
        app:layout_constraintRight_toLeftOf="@+id/me"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/me"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="ME"
        app:layout_constraintBaseline_toBaselineOf="@+id/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="384dp"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:text="Recommendation"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/player_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="39dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/player_icon"
        android:layout_width="47dp"
        android:layout_height="69dp"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="285dp"
        android:layout_height="33dp"
        android:layout_marginTop="13dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/player_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_icon"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <TextView
        android:id="@+id/player_games"
        android:layout_width="284dp"
        android:layout_height="33dp"
        android:text="Favorite games"
        app:layout_constraintBottom_toBottomOf="@+id/player_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/player_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_icon" />

    <Button
        android:id="@+id/view_profile"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="113dp"
        android:layout_height="35dp"
        android:elevation="0dp"
        android:text="View Profile"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/player_games" />

    <Button
        android:id="@+id/add_player"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="113dp"
        android:layout_height="35dp"
        android:text="Add friends"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="125dp"
        app:layout_constraintBottom_toBottomOf="@+id/player_games"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>


