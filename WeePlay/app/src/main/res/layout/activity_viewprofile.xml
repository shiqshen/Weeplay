<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_viewprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="capstone.weeplay.ViewProfileActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/textname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/textage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/textname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/age"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Age"
        app:layout_constraintBottom_toBottomOf="@+id/game1"
        app:layout_constraintEnd_toStartOf="@+id/textage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/textage"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/textgame1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/age"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/game1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:text="Game 1"
        app:layout_constraintBottom_toBottomOf="@+id/game2"
        app:layout_constraintEnd_toStartOf="@+id/textgame1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/game2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="40dp"
        android:text="Game 2"
        app:layout_constraintBottom_toBottomOf="@+id/textgame3"
        app:layout_constraintEnd_toStartOf="@+id/textgame2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/game3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="40dp"
        android:text="Game 3"
        app:layout_constraintEnd_toStartOf="@+id/textgame3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game2" />

    <EditText
        android:id="@+id/textgame1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/textgame2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game1"
        app:layout_constraintTop_toTopOf="@+id/age" />

    <EditText
        android:id="@+id/textgame2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/textgame3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game2"
        app:layout_constraintTop_toBottomOf="@+id/age" />

    <EditText
        android:id="@+id/textgame3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="107dp"
        android:layout_height="78dp"
        android:layout_marginEnd="98dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/toast_frame" />


    <Button
        android:id="@+id/game"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="GAME"
        app:layout_constraintBaseline_toBaselineOf="@+id/friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/friends"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="Friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat"
        app:layout_constraintRight_toLeftOf="@+id/chat"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/chat"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="CHAT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/me"
        app:layout_constraintRight_toLeftOf="@+id/me"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/me"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="ME"
        app:layout_constraintBaseline_toBaselineOf="@+id/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="27dp" />


</android.support.constraint.ConstraintLayout>