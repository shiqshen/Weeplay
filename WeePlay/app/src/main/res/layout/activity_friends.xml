<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="capstone.weeplay.FriendsActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/recommendation"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:text="Recommendation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="386dp"
        android:layout_height="38dp"
        android:text="Contact"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player_icon"
        android:layout_width="70dp"
        android:layout_height="67dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/player_games"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player_name"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="185dp"
        android:layout_height="33dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_profile"
        app:layout_constraintEnd_toEndOf="@+id/recommendation"
        app:layout_constraintStart_toStartOf="@+id/player_icon" />

    <TextView
        android:id="@+id/player_games"
        android:layout_width="269dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Favorite games"
        app:layout_constraintBottom_toBottomOf="@+id/player_chat"
        app:layout_constraintEnd_toStartOf="@+id/player_chat"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/player_chat"
        app:layout_constraintTop_toBottomOf="@+id/player_name"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/view_profile"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="109dp"
        android:layout_height="34dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="11dp"
        android:elevation="0dp"
        android:text="View Profile"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/player_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/player_chat"
        app:layout_constraintTop_toBottomOf="@+id/recommendation"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/player_chat"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="124dp"
        android:layout_height="33dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="132dp"
        android:text="Chat"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/game"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="GAME"
        app:layout_constraintBaseline_toBaselineOf="@+id/friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/friends"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="Friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat"
        app:layout_constraintRight_toLeftOf="@+id/chat"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/chat"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="CHAT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/me"
        app:layout_constraintRight_toLeftOf="@+id/me"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/me"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:text="ME"
        app:layout_constraintBaseline_toBaselineOf="@+id/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
